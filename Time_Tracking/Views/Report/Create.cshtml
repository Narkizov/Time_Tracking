@model Report
@{
    ViewBag.Title = "Создание отчета";
}

<h2 class="text-center">Создание отчета</h2>
<hr />
<div class="row">
    <form asp-action="Create" asp-controller="Report" asp-antiforgery="true" method="post" class="col-12">
        <div class="form-group">
            <label asp-for="UserId">Выберите пользователя:</label>
            <select class="form-control" asp-for="UserId" asp-items="ViewBag.Users">
                @if (ViewBag.DefaultUserEmail != null)
                {
                    <option value="@Model.UserId">@ViewBag.DefaultUserEmail</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Comment">Комментарий:</label>
            <input class="form-control" type="text" asp-for="Comment" />
            <span asp-validation-for="Comment"></span>
        </div>
        <div class="form-group">
            <label asp-for="QuantityOfHours">Количество часов:</label>
            <input class="form-control" type="text" asp-for="QuantityOfHours" />
            <span asp-validation-for="QuantityOfHours"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date">Дата:</label>
            <input class="form-control" type="date" asp-for="Date" />
            <span asp-validation-for="Date"></span>
        </div>
        <input type="submit" value="Отправить" class="btn btn-primary" />
        <a href="/User/Index" class="btn btn-primary">Назад</a>
    </form>
</div>