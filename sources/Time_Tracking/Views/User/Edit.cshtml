@model User
@{ 
    ViewBag.Title = "Редактирование пользователя";
}

<h2 class="text-center">Редактирование пользователя</h2>
<hr />
<div class="row">
    <form asp-action="Edit" asp-controller="User" asp-route-id="@Model.Id" asp-antiforgery="true" method="post" class="col-12">
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input class="form-control" type="email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="FName">Фамилия:</label>
            <input class="form-control" type="text" asp-for="FName" />
            <span asp-validation-for="FName"></span>
        </div>
        <div class="form-group">
            <label asp-for="MName">Имя:</label>
            <input class="form-control" type="text" asp-for="MName" />
            <span asp-validation-for="MName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LName">Отчество:</label>
            <input class="form-control" type="text" asp-for="LName" />
        </div>
        <input type="hidden" name="currentEmail" value="@Model.Email" />
        <input type="submit" value="Сохранить" class="btn btn-success" />
    </form>
</div>