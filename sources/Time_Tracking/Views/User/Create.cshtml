@model User
@{
    ViewBag.Title = "Создание пользователя";
}


<h2 class="text-center">Создание пользователя</h2>
<hr />
<div class="row">
    <form asp-action="Create" asp-controller="User" asp-antiforgery="true" method="post" class="col-12">
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input class="form-control" type="email" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="FName">Фамилия:</label>
            <input class="form-control" type="text" asp-for="FName" />
            <span asp-validation-for="FName"></span>
        </div>
        <div class="form-group">
            <label asp-for="MName">Имя:</label>
            <input class="form-control" type="text" asp-for="MName" />
            <span asp-validation-for="MName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LName">Отчество:</label>
            <input class="form-control" type="text" asp-for="LName" />
        </div>
        <input type="submit" value="Отправить" class="btn btn-primary" />
    </form>
</div>