@model Report
@{
    ViewBag.Title = "Редактирование отчета";
}

<h2 class="text-center">Создание отчета</h2>
<hr />
<div class="row">
    <form asp-action="Edit" asp-controller="Report" asp-antiforgery="true" asp-route-id="@Model.Id" method="post" class="col-12">
        <input type="hidden" asp-for="UserId" />
        <div class="form-group">
            <label>EMail:</label>
            <input type="text" class="form-control" readonly="readonly" placeholder="@Model.User.Email" />
        </div>
        <div class="form-group">
            <label asp-for="Comment">Комментарий:</label>
            <input class="form-control" type="text" asp-for="Comment" />
            <span asp-validation-for="Comment"></span>
        </div>
        <div class="form-group">
            <label asp-for="QuantityOfHours">Количество часов:</label>
            <input class="form-control" type="text" asp-for="QuantityOfHours" />
            <span asp-validation-for="QuantityOfHours"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date">Дата:</label>
            <input class="form-control" type="date" asp-for="Date" />
            <span asp-validation-for="Date"></span>
        </div>
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a href="/User/Index" class="btn btn-primary">Назад</a>
    </form>
</div>